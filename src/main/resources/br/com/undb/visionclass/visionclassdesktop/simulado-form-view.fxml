<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.SimuladoFormController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label styleClass="title-large" text="Criar Novo Simulado">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Título do Simulado:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tituloTextField" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">
                    <items>
                        <AnchorPane>
                            <children>
                                <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Label text="1. Selecione as Questões">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <TableView fx:id="questoesTableView" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="selecionarQuestaoColumn" prefWidth="50.0" text=" " />
                                                <TableColumn fx:id="enunciadoColumn" prefWidth="300.0" text="Enunciado" />
                                                <TableColumn fx:id="disciplinaColumn" prefWidth="120.0" text="Disciplina" />
                                                <TableColumn fx:id="nivelColumn" prefWidth="80.0" text="Nível" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>
                                <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Label text="2. Atribuir às Turmas">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <TableView fx:id="turmasTableView" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="selecionarTurmaColumn" prefWidth="50.0" text=" " />
                                                <TableColumn fx:id="nomeTurmaColumn" prefWidth="200.0" text="Nome da Turma" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
                        <Button mnemonicParsing="false" onAction="#handleSalvarSimulado" styleClass="primary-button" text="Salvar Simulado" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>