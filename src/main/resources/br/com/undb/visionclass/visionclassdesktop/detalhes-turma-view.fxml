<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.DetalhesTurmaController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleVoltarParaTurmas" styleClass="sidebar-button" text="← Voltar para Turmas">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label fx:id="nomeTurmaLabel" styleClass="title-large" text="Turma: NOME DA TURMA">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="detalhesTurmaLabel" styleClass="text-muted" text="Detalhes e gerenciamento da turma ID: X" />
                            </children>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" styleClass="primary-button" text="Adicionar Aluno" onAction="#handleAdicionarAluno"/>
                    </children>
                </HBox>
                <HBox spacing="30.0">
                    <children>
                        <VBox styleClass="stats-card-simple">
                            <children>
                                <Label text="Total de Alunos" />
                                <Label fx:id="totalAlunosLabel" styleClass="stats-card-number" text="0" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card-simple">
                            <children>
                                <Label text="Professor Responsável" />
                                <Label fx:id="professorResponsavelLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox styleClass="card" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="title-medium" text="Lista de Alunos" />
                        <Label styleClass="text-muted" text="Visão geral e acesso rápido ao desempenho individual." />
                        <TableView fx:id="alunosTableView" prefHeight="350.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="matriculaColumn" prefWidth="100.0" text="Matrícula" />
                                <TableColumn fx:id="nomeColumn" prefWidth="200.0" text="Nome" />
                                <TableColumn fx:id="emailColumn" prefWidth="250.0" text="E-mail" />
                                <TableColumn fx:id="mediaColumn" prefWidth="100.0" text="Média" />
                                <TableColumn fx:id="acoesColumn" prefWidth="150.0" text="Ações" />
                            </columns>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>