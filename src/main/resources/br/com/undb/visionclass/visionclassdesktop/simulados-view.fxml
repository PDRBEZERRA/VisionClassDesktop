<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.SimuladosController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="title-large" text="Gerenciar Simulados">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label styleClass="text-muted" text="Crie, edite e acompanhe o desempenho dos simulados." />
                            </children>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleNovoSimulado" styleClass="primary-button" text="+ Criar Novo Simulado" />
                    </children>
                </HBox>
                <TableView fx:id="simuladosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tituloColumn" prefWidth="300.0" text="Título" />
                        <TableColumn fx:id="dataCriacaoColumn" prefWidth="150.0" text="Data de Criação" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                        <TableColumn fx:id="questoesColumn" prefWidth="100.0" text="Nº Questões" />
                        <TableColumn fx:id="submissoesColumn" prefWidth="100.0" text="Submissões" />
                        <TableColumn fx:id="acoesColumn" prefWidth="150.0" text="Ações" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>