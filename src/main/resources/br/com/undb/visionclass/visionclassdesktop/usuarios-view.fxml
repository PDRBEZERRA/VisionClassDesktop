<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.UsuariosController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Gestão de Utilizadores">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="usersTableView" layoutX="20.0" layoutY="120.0" prefHeight="460.0" prefWidth="560.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="120.0">
            <columns>
                <TableColumn fx:id="nomeColumn" prefWidth="150.0" text="Nome" />
                <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="matriculaColumn" prefWidth="100.0" text="Matrícula" />
                <TableColumn fx:id="roleColumn" prefWidth="120.0" text="Função" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox layoutX="20.0" layoutY="70.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onAdicionarButtonClick" text="Adicionar Novo" />
                <Button fx:id="editarButton" mnemonicParsing="false" onAction="#onEditarButtonClick" text="Editar Selecionado" />
                <Button fx:id="excluirButton" mnemonicParsing="false" onAction="#onExcluirButtonClick" style="-fx-background-color: #ef4444; -fx-text-fill: white;" text="Excluir Selecionado" />
            </children>
        </HBox>
    </children>
</AnchorPane>
