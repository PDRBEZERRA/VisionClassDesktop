<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.BancoQuestoesController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="title-large" text="Banco de Questões">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label styleClass="text-muted" text="Gerencie, adicione e edite as questões para os simulados." />
                            </children>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleNovaQuestao" styleClass="primary-button" text="+ Nova Questão" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Filtrar por:" />
                        <ComboBox fx:id="disciplinaComboBox" prefWidth="200.0" promptText="Todas as Disciplinas" />
                        <ComboBox fx:id="assuntoComboBox" prefWidth="200.0" promptText="Todos os Assuntos" />
                    </children>
                </HBox>
                <TableView fx:id="questoesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" maxWidth="80.0" minWidth="60.0" prefWidth="70.0" text="ID" />
                        <TableColumn fx:id="enunciadoColumn" prefWidth="350.0" text="Enunciado" />
                        <TableColumn fx:id="disciplinaColumn" prefWidth="150.0" text="Disciplina" />
                        <TableColumn fx:id="assuntoColumn" prefWidth="150.0" text="Assunto" />
                        <TableColumn fx:id="nivelColumn" prefWidth="100.0" text="Nível" />
                        <TableColumn fx:id="acoesColumn" prefWidth="120.0" text="Ações" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>