<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.CarometroController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="title-large" text="Carômetro">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label styleClass="text-muted" text="Avaliação comportamental da turma" />
                            </children>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="turmaComboBox" prefWidth="250.0" promptText="Selecione uma Turma" />
                    </children>
                </HBox>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="alunosTilePane" hgap="20.0" prefColumns="5" vgap="20.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </TilePane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>