<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="800.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.QuestaoFormController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label styleClass="title-large" text="Criar Nova Questão" fx:id="titleLabel">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <GridPane hgap="15.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Disciplina" />
                        <Label text="Assunto" GridPane.rowIndex="1" />
                        <ComboBox fx:id="disciplinaComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione a disciplina" GridPane.columnIndex="1" />
                        <ComboBox fx:id="assuntoComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o assunto" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Nível de Dificuldade" GridPane.rowIndex="2" />
                        <ComboBox fx:id="nivelDificuldadeComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o nível" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <VBox styleClass="card">
                    <children>
                        <Label text="Enunciado da Questão">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="enunciadoTextArea" prefHeight="120.0" wrapText="true">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </TextArea>
                    </children>
                </VBox>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Tipo da Questão:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="tipoQuestaoComboBox" prefWidth="200.0" promptText="Selecione o tipo" />
                    </children>
                </HBox>
                <ScrollPane fx:id="alternativasScrollPane" fitToWidth="true" hbarPolicy="NEVER" managed="false" visible="false" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="alternativasContainer" spacing="15.0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Alternativas de Resposta">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label styleClass="text-muted" text="(Marque a opção correta)" />
                                    </children>
                                </HBox>
                                <Button mnemonicParsing="false" onAction="#adicionarAlternativa" text="+ Adicionar Alternativa" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
                        <Button mnemonicParsing="false" onAction="#handleSalvarQuestao" styleClass="primary-button" text="Salvar Questão" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>