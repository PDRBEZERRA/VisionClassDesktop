<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0" stylesheets="@login-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.DashboardController">
    <left>
        <VBox prefWidth="220.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="dashboardButton" onAction="#onDashboardButtonClick" styleClass="sidebar-button" text="Dashboard" />
                <Button fx:id="gerirUsuariosButton" onAction="#onGerirUsuariosClick" styleClass="sidebar-button" text="Gerir Utilizadores" />
                <Button fx:id="gerirTurmasButton" onAction="#onGerirTurmasClick" styleClass="sidebar-button" text="Gerir Turmas" />
                <Button fx:id="gerirDisciplinasButton" onAction="#onGerirDisciplinasClick" styleClass="sidebar-button" text="Disciplinas/Assuntos" />
                <Button fx:id="relatoriosButton" onAction="#onRelatoriosClick" styleClass="sidebar-button" text="Relatórios" />
                <Button fx:id="carometroButton" onAction="#onCarometroClick" styleClass="sidebar-button" text="Carômetro" />
                <Button fx:id="bancoQuestoesButton" onAction="#onBancoQuestoesClick" styleClass="sidebar-button" text="Banco de Questões" />
                <Button fx:id="simuladosButton" onAction="#onSimuladosClick" styleClass="sidebar-button" text="Simulados" />
                <Button fx:id="sairButton" onAction="#onSairButtonClick" styleClass="sidebar-button" text="Sair" />
            </children>
        </VBox>
    </left>
    <top>
        <HBox alignment="CENTER_RIGHT" prefHeight="80.0" styleClass="header" BorderPane.alignment="CENTER">
            <children>
                <Pane HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="userNameLabel" styleClass="text-username" text="Nome do Utilizador" />
                        <ImageView fx:id="userAvatar" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/avatar.jpg" />
                            </image>
                            <clip>
                                <Circle radius="20.0" centerX="20.0" centerY="20.0" />
                            </clip>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets right="30.0" />
                    </padding>
                </HBox>
            </children>
        </HBox>
    </top>
    <center />
</BorderPane>