<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.AdicionarAlunoController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="title-large" text="Adicionar Aluno" />
                        <Label fx:id="nomeTurmaLabel" styleClass="text-muted" text="Buscando alunos para adicionar à turma: NOME DA TURMA" />
                    </children>
                </VBox>
                <HBox>
                    <children>
                        <TextField fx:id="buscaAlunoTextField" HBox.hgrow="ALWAYS" promptText="Pesquisar por nome do aluno..." style="-fx-font-size: 14px;" />
                    </children>
                </HBox>
                <TableView fx:id="alunosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="matriculaColumn" prefWidth="120.0" text="Matrícula" />
                        <TableColumn fx:id="nomeColumn" prefWidth="300.0" text="Nome" />
                        <TableColumn fx:id="acaoColumn" prefWidth="120.0" text="Ação" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onFecharButtonClick" text="Fechar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>