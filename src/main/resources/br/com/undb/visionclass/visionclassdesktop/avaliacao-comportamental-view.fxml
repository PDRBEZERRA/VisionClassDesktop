<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="700.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.AvaliacaoComportamentalController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="title-large" text="Avaliação Comportamental">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleVerHistorico" styleClass="sidebar-button" text="Ver Histórico" />
                    </children>
                </HBox>
                <HBox spacing="20.0">
                    <children>
                        <ImageView fx:id="avatarImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="nomeAlunoLabel" styleClass="title-medium" text="Nome do Aluno">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="matriculaLabel" styleClass="text-muted" text="Matrícula: 000000" />
                                <Label fx:id="turmaLabel" styleClass="text-muted" text="Turma: Nome da Turma" />
                            </children>
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
                <VBox styleClass="card">
                    <children>
                        <GridPane hgap="15.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Assiduidade" GridPane.halignment="LEFT" GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label text="Participação" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label text="Responsabilidade" GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label text="Sociabilidade" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1">
                                    <children>
                                        <ToggleButton mnemonicParsing="false" text="😡">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="assiduidadeGroup" />
                                            </toggleGroup>
                                        </ToggleButton>
                                        <ToggleButton mnemonicParsing="false" text="😕" toggleGroup="$assiduidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😐" toggleGroup="$assiduidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="🙂" toggleGroup="$assiduidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😄" toggleGroup="$assiduidadeGroup" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <ToggleButton mnemonicParsing="false" text="😡">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="participacaoGroup" />
                                            </toggleGroup>
                                        </ToggleButton>
                                        <ToggleButton mnemonicParsing="false" text="😕" toggleGroup="$participacaoGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😐" toggleGroup="$participacaoGroup" />
                                        <ToggleButton mnemonicParsing="false" text="🙂" toggleGroup="$participacaoGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😄" toggleGroup="$participacaoGroup" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <children>
                                        <ToggleButton mnemonicParsing="false" text="😡">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="responsabilidadeGroup" />
                                            </toggleGroup>
                                        </ToggleButton>
                                        <ToggleButton mnemonicParsing="false" text="😕" toggleGroup="$responsabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😐" toggleGroup="$responsabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="🙂" toggleGroup="$responsabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😄" toggleGroup="$responsabilidadeGroup" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <children>
                                        <ToggleButton mnemonicParsing="false" text="😡">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="sociabilidadeGroup" />
                                            </toggleGroup>
                                        </ToggleButton>
                                        <ToggleButton mnemonicParsing="false" text="😕" toggleGroup="$sociabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😐" toggleGroup="$sociabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="🙂" toggleGroup="$sociabilidadeGroup" />
                                        <ToggleButton mnemonicParsing="false" text="😄" toggleGroup="$sociabilidadeGroup" />
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <VBox styleClass="card">
                    <children>
                        <Label text="Observações">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="observacoesTextArea" prefHeight="100.0" wrapText="true" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </TextArea>
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
                        <Button mnemonicParsing="false" onAction="#handleSalvar" styleClass="primary-button" text="Salvar Avaliação" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>