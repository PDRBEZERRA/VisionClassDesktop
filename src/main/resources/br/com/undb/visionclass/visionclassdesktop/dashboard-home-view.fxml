<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.DashboardHomeController">
    <children>
        <VBox spacing="40.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="title-large" text="Dashboard Administrativo" />
                        <Label styleClass="text-muted" text="Visão geral do sistema" />
                    </children>
                </VBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Total de Alunos" />
                                <Label fx:id="totalAlunosLabel" text="0" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Professores" />
                                <Label fx:id="totalProfessoresLabel" text="0" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Turmas Ativas" />
                                <Label fx:id="totalTurmasLabel" text="0" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Simulados Ativos" />
                                <Label fx:id="totalSimuladosLabel" text="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox spacing="15.0">
                    <children>
                        <Label styleClass="title-medium" text="Ações Rápidas" />
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onCadastrarUsuarioClick" styleClass="quick-action-button" text="Cadastrar Utilizador" />
                                <Button mnemonicParsing="false" styleClass="quick-action-button" text="Criar Turma" />
                                <Button mnemonicParsing="false" styleClass="quick-action-button" text="Ver Relatórios" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <Label styleClass="title-medium" text="Atividades Recentes" />
                        <VBox styleClass="card">
                            <children>
                                <Label text="Nenhuma atividade recente." />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
