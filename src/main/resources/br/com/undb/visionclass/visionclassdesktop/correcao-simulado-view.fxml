<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #f8fafc;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.undb.visionclass.visionclassdesktop.CorrecaoSimuladoController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label fx:id="tituloSimuladoLabel" styleClass="title-large" text="Correção: [Título do Simulado]">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
                    <items>
                        <AnchorPane>
                            <children>
                                <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Label styleClass="title-medium" text="Respostas Submetidas" />
                                        <ListView fx:id="alunosListView" VBox.vgrow="ALWAYS" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>

                        <AnchorPane>
                            <children>
                                <VBox fx:id="detalhesCorrecaoContainer" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Label fx:id="nomeAlunoDetalheLabel" styleClass="title-medium" text="Selecione um aluno para corrigir." />

                                        <VBox>
                                            <children>
                                                <Label fx:id="statusCorrecaoLabel" text="Status: Aguardando Correção" styleClass="text-muted" />
                                                <Label fx:id="notaAtualLabel" text="Nota Atual: -" style="-fx-font-weight: bold;" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Label text="Questões Discursivas" />
                                                <ListView fx:id="questoesDiscursivasListView" VBox.vgrow="ALWAYS" />
                                            </children>
                                        </VBox>

                                        <VBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Label fx:id="mensagemFeedback" text="Multi-escolha corrigida automaticamente." styleClass="text-muted" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </VBox>
    </children>
</AnchorPane>