<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="200.0" prefWidth="350.0" styleClass="turma-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.undb.visionclass.visionclassdesktop.AlunoTurmaCardController">
    <children>
        <Label fx:id="nomeTurmaLabel" styleClass="turma-card-title" text="Nome da Turma" />
        <Label fx:id="nomeProfessorLabel" styleClass="turma-card-subtitle" text="Prof. Nome do Professor" />
        <Pane VBox.vgrow="ALWAYS" />

        <HBox spacing="20.0">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="turma-card-text" text="Minha Média"/>
                        <Label fx:id="mediaLabel" styleClass="stats-card-number" text="-" />
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="turma-card-text" text="Posição"/>
                        <Label fx:id="posicaoLabel" styleClass="stats-card-number" text="-" />
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label fx:id="simuladosLabel" styleClass="turma-card-text" text="Simulados: 0/0" />
                <Pane HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>