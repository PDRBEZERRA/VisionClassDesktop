<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.DashboardProfessorHomeController">
    <children>
        <VBox spacing="40.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="title-large" text="Bem-vindo, Professor!" />
                        <Label styleClass="text-muted" text="Gerencie as suas turmas e atividades" />
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <Label styleClass="title-medium" text="Ações Rápidas" />
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="avaliarTurmaButton" mnemonicParsing="false" onAction="#handleAvaliarTurma" styleClass="quick-action-button" text="Avaliar Turma" />
                                <Button fx:id="criarQuestaoButton" mnemonicParsing="false" onAction="#handleCriarQuestao" styleClass="quick-action-button" text="Criar Questão" />
                                <Button fx:id="gerarSimuladoButton" mnemonicParsing="false" onAction="#handleGerarSimulado" styleClass="quick-action-button" text="Gerar Simulado" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <Label styleClass="title-medium" text="Minhas Turmas" />
                        <VBox fx:id="minhasTurmasContainer" spacing="10.0" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>