<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.TurmasController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label styleClass="title-large" text="Gerenciar Turmas">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="adicionarTurmaButton" mnemonicParsing="false" onAction="#onAdicionarButtonClick" styleClass="primary-button" text="Adicionar Nova Turma" />
                    </children>
                </HBox>
                <TableView fx:id="turmasTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nomeColumn" prefWidth="250.0" text="Nome da Turma" />
                        <TableColumn fx:id="professorColumn" prefWidth="200.0" text="Professor Responsável" />
                        <TableColumn fx:id="alunosColumn" prefWidth="100.0" text="Nº de Alunos" />
                        <TableColumn fx:id="anoColumn" prefWidth="100.0" text="Ano" />
                        <TableColumn fx:id="periodoColumn" prefWidth="100.0" text="Período" />
                        <TableColumn fx:id="acoesColumn" prefWidth="120.0" text="Ações" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>