<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="350.0" styleClass="turma-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.TurmaCardController">
    <children>
        <Label fx:id="nomeTurmaLabel" styleClass="turma-card-title" text="Nome da Turma 3ยบ A" />
        <Label fx:id="nomeProfessorLabel" styleClass="turma-card-subtitle" text="Prof. Nome do Professor" />
        <Pane VBox.vgrow="ALWAYS" />
        <Label styleClass="turma-card-text" text="Desempenho da Turma" />
        <ProgressBar fx:id="desempenhoProgressBar" prefWidth="200.0" progress="0.75" />
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label fx:id="totalAlunosLabel" styleClass="turma-card-text" text="X Alunos" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="verTurmaButton" mnemonicParsing="false" styleClass="primary-button" text="Ver Turma" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>