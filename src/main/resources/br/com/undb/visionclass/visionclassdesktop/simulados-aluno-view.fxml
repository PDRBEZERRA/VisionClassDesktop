<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.undb.visionclass.visionclassdesktop.SimuladosAlunoController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="title-large" text="Meus Simulados">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label styleClass="text-muted" text="Lista de simulados atribuídos à sua turma." />
                    </children>
                </VBox>
                <TableView fx:id="simuladosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="tituloColumn" prefWidth="300.0" text="Título" />
                        <TableColumn fx:id="professorColumn" prefWidth="150.0" text="Professor" />
                        <TableColumn fx:id="questoesColumn" prefWidth="100.0" text="Nº Questões" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                        <TableColumn fx:id="acoesColumn" prefWidth="150.0" text="Ações" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>