<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="780.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.DashboardAlunoHomeController">
    <children>
        <VBox spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox>
                    <children>
                        <Label fx:id="welcomeLabel" styleClass="title-large" text="Bem-vindo(a), [Nome do Aluno]!">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label styleClass="text-muted" text="Aqui está um resumo do seu progresso e atividades." />
                    </children>
                </VBox>
                <FlowPane hgap="30.0" vgap="30.0">
                    <children>
                        <VBox styleClass="stats-card">
                            <children>
                                <Label text="Desempenho Comportamental" />
                                <Label fx:id="desempenhoComportamentalLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card">
                            <children>
                                <Label text="Simulados Disponíveis" />
                                <Label fx:id="simuladosDisponiveisLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card">
                            <children>
                                <Label text="Simulados Realizados" />
                                <Label fx:id="simuladosRealizadosLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card">
                            <children>
                                <Label text="Média Geral (Simulados)" />
                                <Label fx:id="mediaGeralLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                        <VBox styleClass="stats-card">
                            <children>
                                <Label text="Posição na Turma" />
                                <Label fx:id="posicaoTurmaLabel" styleClass="stats-card-number" text="-" />
                            </children>
                        </VBox>
                    </children>
                </FlowPane>
            </children>
        </VBox>
    </children>
</AnchorPane>