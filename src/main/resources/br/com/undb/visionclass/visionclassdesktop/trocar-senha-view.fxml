<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.undb.visionclass.visionclassdesktop.TrocarSenhaController">
    <children>
        <VBox alignment="CENTER_LEFT" maxWidth="400.0" prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <Label text="Alterar Senha">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </Label>
                <Label text="Mantenha sua conta segura com uma senha forte">
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                </Label>
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Senha Atual" />
                        <PasswordField fx:id="senhaAtualField" promptText="********" />
                        <Label text="Nova Senha" />
                        <PasswordField fx:id="novaSenhaField" promptText="********" />
                        <Label text="Confirmar Nova Senha" />
                        <PasswordField fx:id="confirmarNovaSenhaField" promptText="********" />
                        <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                            <children>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button onAction="#handleAtualizarSenha" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" text="Atualizar Senha">
                                    <HBox.margin>
                                        <Insets bottom="10.0" right="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>